    printf("\n");
}


void evidence_game_outcome() {
    game* game1 = new_game(3, 4, 5, MATRIX);
    drop_piece(game1, 2);
    drop_piece(game1, 1);
    drop_piece(game1, 3);
    drop_piece(game1, 3);
    drop_piece(game1, 3);
    board_show(game1 -> b);
    printf("\n");
    game_outcome(game1);    
    drop_piece(game1, 2);
    drop_piece(game1, 1);
    board_show(game1 -> b);
    printf("\n");
    game_outcome(game1);
    printf("\n");
    struct pos pos = make_pos(3, 3);
    board_set(game1 -> b, pos, BLACK);
    struct pos pos2 = make_pos(2, 2);
    board_set(game1 -> b, pos2, BLACK);
    struct pos pos3 = make_pos(1, 1);
    board_set(game1 -> b, pos3, BLACK);
    board_show(game1 -> b);
    printf("\n");
    game_outcome(game1);
    printf("\n");
}


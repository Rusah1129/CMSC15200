void evidence_twist() {
    game* game1 = new_game(3, 4, 5, MATRIX);
    board_show(game1 -> b);
    printf("\n");
    drop_piece(game1, 0);
    board_show(game1 -> b);
    printf("\n");
    drop_piece(game1, 0);
    board_show(game1 -> b);
